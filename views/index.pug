doctype html
head
   title Exercise Tracker | freeCodeCamp
   link(rel='shortcut icon' href='https://cdn.freecodecamp.org/universal/favicons/favicon.ico' type='image/x-icon')
   link(href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet' type='text/css')
   link(href='style.css' rel='stylesheet' type='text/css')
   script(src="index.js" defer)
body
   div.container
      h1 Exercise tracker
      form(action='/api/users' method='post')
         h3 Create a New User
         p
            code POST /api/users
         input#uname(type='text' name='username' placeholder='username')
         input(type='submit' value='Submit')
      form#exercise-form(method='post')
         h3 Add exercises
         p
            code POST /api/users/:_id/exercises
         input#uid(type='text' name=':_id' placeholder=':_id')
         input#desc(type='text' name='description' placeholder='description*')
         input#dur(type='text' name='duration' placeholder='duration* (mins.)')
         input#date(type='text' name='date' placeholder='date (yyyy-mm-dd)')
         input(type='submit' value='Submit')
      p
         strong GET user&apos;s exercise log: 
         code GET /api/users/:_id/logs?[from][&amp;to][&amp;limit]
      p
         strong [ ]
         |  = optional
      p
         strong from, to
         |  = dates (yyyy-mm-dd); 
         strong limit
         |  = number